<form method="get" action="/quizes">
  <p>Filtro de preguntas</p>
  <input type="text" name="search" value="" />
  <input type="submit" value="Enviar" />
</form>

<table>
  <% var i; for (i=0; i < quizes.length; i++) { %>
    <tr>
      <td><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %> (<%= quizes[i].tema %>)</a></td>
      <td><a href="/quizes/<%= quizes[i].id %>/edit"><button>editar</button></a></td>
      <td>
      <form method="post" action="/quizes/<%= quizes[i].id %>?_method=delete">
        <button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>')">
          borrar
        </button>
      </form>
      </td>
    </tr>
  <% } %>
  <% if (quizes.length == 0) { %>
  <tr>
    <td>No se encuentran preguntas con los criterios de b&uacutesqueda seleccionados.</td>
  </tr>
  <tr>
    <td>Por favor, cambie el filtro e int&eacutentelo de nuevo.</td>
  </tr>
  <% } %>
  <tr>
    <td><a href="/quizes/new"><button type="button">Crear pregunta</button></a></td>
  </tr>
</table>
